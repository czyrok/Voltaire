{
	"appId": "Voltaire.app",
	"productName": "Voltaire",
	"artifactName": "${productName} Update Setup ${version}.${ext}",
	"win": {
		"icon": "assets/img/icons/icon.ico",
		"target": [
			"nsis"
		]
	},
	"nsis": {
		"installerIcon": "assets/img/icons/installer.ico",
		"uninstallerIcon": "assets/img/icons/icon.ico",
		"installerSidebar": "assets/img/sidebar/sidebar.bmp",
		"uninstallDisplayName": "${productName}",
		"oneClick": true,
		"allowToChangeInstallationDirectory": false,
		"perMachine": false,
		"runAfterFinish": false
	},
	"fileAssociations": {
		"ext": [
			"txt"
		],
		"role": "Editor"
	}
}