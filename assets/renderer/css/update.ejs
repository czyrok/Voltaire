<style>
    #update {
        height: 100%;
        display: flex;
        justify-self: center;
        align-items: center;
        font-size: 0;
        opacity: 0;
        overflow: hidden;
    }

    @keyframes removeUpdate {
        0% {
            font-size: 100%;
            opacity: 1;
        }

        60% {
            opacity: 0;
        }

        100% {
            opacity: 0;
            font-size: 0;
        }
    }

    @keyframes showUpdate {
        0% {
            font-size: 0;
            opacity: 0;
        }

        30% {
            opacity: 0;
        }

        100% {
            opacity: 1;
            font-size: 100%;
        }
    }

    #update svg {
        width: 1.2em;
        height: 1.2em;
        transform: rotate(270deg);
    }

    #update svg circle {
        cx: .6em;
        cy: .6em;
        r: .5em;
        fill: none;
        stroke-width: .2em;
    }

    #update svg #update-font {
        stroke: <%= global.colors.d %>;
    }

    #update svg #circle {
        stroke: <%= global.colors.e %>;
        stroke-linecap: round;
        stroke-dasharray: 50;
        stroke-dashoffset: 50;
    }

    #update h1 {
        font-size: .75em;
        margin-left: .4em;
        margin-right: .4em;
        margin-top: .2em;
    }

    #update button {
        cursor: default;
        font-size: 1em;
        color: <%= global.colors.e %>;
        width: 1.25em;
        height: 1.25em;
    }
</style>