<style>
  html,
  body {
    font-family: <%= global.fonts.a %>;
    background-color: <%= global.colors.e %>;
    width: 100%;
    height: 100%;
    margin: 0;
    overflow: hidden;
    -webkit-user-select: none;
  }

  a {
    cursor: default;
  }

  button {
    padding: 0;
    border: none;
    outline-style: none;
    background-color: transparent;
    overflow: hidden;
    border-radius: 50%;
    cursor: pointer;
  }

  div[role=button] {
    border: none;
    outline-style: none;
  }

  div[role=checkbox] {
    border: none;
    outline-style: none;
  }

  input {
    border: none;
    outline-style: none;
  }

  select {
    border: none;
    outline-style: none;
    font-family: <%= global.fonts.a %>;
    cursor: pointer;
  }

  h1,
  p,
  i {
    margin: 0;
    color: <%= global.colors.e %>;
  }

  [contenteditable] {
    padding-left: <%= global.common.px.marginPadding %>;
    outline-style: none;
  }

  @font-face {
    font-family: <%= global.fonts.a %>;
    src: url("../fonts/notosans/notosans-regular.ttf");
  }

  @font-face {
    font-family: <%= global.fonts.b %>;
    src: url("../fonts/firecode/firecode-regular.ttf");
  }

  /*--------------*/

  button span {
    position: absolute;
    background-color: #fff;
    transform: translate(-50%, -50%);
    pointer-events: none;
    border-radius: 50%;
    animation: ripples 0.7s linear forwards;
    z-index: 500;
  }

  @keyframes ripples {
    0% {
      width: 0;
      height: 0;
      opacity: 0.2;
    }

    100% {
      width: 500px;
      height: 500px;
      opacity: 0;
    }
  }

  .margin-view-overlays .current-line {
    background-color: <%= global.colors.b %>;
  }
</style>